{
  "name": "random-message-action",
  "version": "1.0.10",
  "description": "Github Action to provide a random message to other actions",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "oxlint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "all": "npm run build && npm run format && npm run lint && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnnybenson/random-message-action.git"
  },
  "author": "Johnny Benson <me@j-hnnybens-n.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johnnybenson/random-message-action/issues"
  },
  "homepage": "https://github.com/johnnybenson/random-message-action#readme",
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@vercel/ncc": "^0.38.4",
    "js-yaml": "^4.1.0",
    "oxlint": "^1.14.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}
